{
  "version": 2,
  "name": "greenflow-frontend-app",
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "headers": { 
        "cache-control": "s-maxage=31536000,immutable",
        "x-content-type-options": "nosniff"
      },
      "dest": "/static/$1"
    },
    {
      "src": "/api/(.*)",
      "status": 404,
      "headers": {
        "x-custom-error": "API requests should go to backend"
      }
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "env": {
    "REACT_APP_API_URL": "@greenflow_api_url",
    "REACT_APP_ENVIRONMENT": "production",
    "REACT_APP_VERSION": "1.0.0"
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options", 
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ]
} 