# 🌱 Greenflow Life - Production Environment Variables

# 데이터베이스 설정 (Render PostgreSQL)
DATABASE_URL=postgresql://username:password@hostname:port/database_name

# JWT 보안 키 (Render에서 자동 생성 또는 직접 설정)
SECRET_KEY=your-super-secret-jwt-key-32-characters-minimum

# CORS 허용 도메인 (배포된 프론트엔드 도메인)
CORS_ORIGINS=https://your-app-name.vercel.app,http://localhost:3000

# 애플리케이션 환경
ENVIRONMENT=production

# 로그 레벨
LOG_LEVEL=info

# 서버 설정
HOST=0.0.0.0
PORT=$PORT

# 외부 서비스 (선택사항)
CLOUDINARY_CLOUD_NAME=your-cloudinary-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret 