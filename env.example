# Database
DATABASE_URL=postgresql://username:password@localhost:5432/greenflow

# JWT Security
SECRET_KEY=your-super-secret-jwt-key-here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Cloudinary (for image storage)
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,https://greenflow-life.vercel.app

# Frontend Environment Variables
REACT_APP_API_URL=http://localhost:8000/api
REACT_APP_CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name

# Production Environment Variables (for deployment)
# PRODUCTION_DATABASE_URL=postgresql://user:pass@host:port/db
# PRODUCTION_SECRET_KEY=your-production-secret-key 